<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"

    android:background="#1b2838">

    <TextView
        android:id="@+id/exam_number"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:paddingLeft="15dp"
        android:text="1."
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#e3e3e3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/exam_total_question_number"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:text="(12 pts)"
        android:textColor="#e3e3e3"
        android:gravity="left"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/exam_number"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/exam_text"
        android:layout_width="230dp"
        android:layout_height="75dp"
        android:paddingLeft="30dp"
        android:textColor="#e3e3e3"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/exam_total_question_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>